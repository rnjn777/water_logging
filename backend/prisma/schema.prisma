generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())

}

enum Role {
  USER
  ADMIN
}


model Report {
  id            Int      @id @default(autoincrement())
  latitude      Float
  longitude     Float
  location      String
  severity      String
  rainIntensity String
  createdAt     DateTime @default(now())
}
